<div class="card">
  <div class="card-inner">
    <%= bootstrap_form_for(animal, url: animal.id.nil? ? animals_path : animal_path(animal)) do |f| %>
      <% animal.errors.each do |error| %>
        <div data-controller="flash" data-type="error" data-message="<%= error.full_message %>" data-timer="5000"></div>
      <% end %>

      <div class="row">
        <div class="col-12 col-md-6"><%= f.text_field :name, label: 'Nom', class: 'form-control-lg' %></div>
        <div class="col-12 col-md-6"><%= f.collection_select :race, @races, :name, :name, label: 'Race', class: 'form-control-lg' %></div>
        <div class="col-12 col-md-6"><%= f.select :gender, [%w[M M], %w[F F]], label: 'Genre', class: 'form-control-lg' %></div>
        <div class="col-12 col-md-6"><%= f.file_field :picture, label: 'Photo', class: 'form-control-lg', 'data-controller': 'image' %></div>
      </div>

      <%= f.number_field :weight, label: 'Poids', append: ['Kilogrammes'], class: 'form-control-lg' %>
      <%= f.date_field :birth_at, label: 'Date de naissance', class: 'form-control-lg' %>
      <%= f.collection_select :farm_id, @farms, :id, :name, label: 'Ferme', class: 'form-control-lg' %>

      <%= f.submit "CrÃ©er", class: 'mt-3 btn btn-primary' %>
    <% end %>
  </div>
</div>
